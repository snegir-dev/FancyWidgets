<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="FancyWidgets.Views.SettingsWindow"
        Background="{DynamicResource VeryDark}"
        Width="400"
        Height="500">

    <Window.Styles>
        <StyleInclude Source="/Styles/BaseStyle.axaml" />
    </Window.Styles>

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/ColorResource.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Border Padding="5">
        <ScrollViewer FontFamily="{DynamicResource Inter}" FontWeight="Regular">
            <StackPanel Name="StackPanelInputControl" />
        </ScrollViewer>
    </Border>

</Window>