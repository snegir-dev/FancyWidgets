<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="using:FancyWidgets.Controls">
    <Design.PreviewWith>
        <controls:DynamicInputControl />
    </Design.PreviewWith>

    <Styles.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="/Resources/BaseResource.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Styles.Resources>

    <Style Selector="controls|DynamicInputControl">
        <Setter Property="Template">
            <ControlTemplate>
                <StackPanel Name="StackPanel">
                    
                </StackPanel>
            </ControlTemplate>
        </Setter>
    </Style>

    <Style Selector="StackPanel">
        <Setter Property="Background" Value="{StaticResource DarkBackground}"></Setter>
        <!-- <Setter Property="Margin" Value="5 0 5 0"></Setter> -->
    </Style>
</Styles>